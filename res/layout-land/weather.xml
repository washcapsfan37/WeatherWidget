<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/weatherbug_blue" >

    <AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="185dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:background="@color/weatherbug_blue" >

        <ImageView
            android:id="@+id/curCondImgView"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_x="9dp"
            android:layout_y="9dp"
            android:background="@color/weatherbug_blue"
            android:contentDescription="@string/loading"
            android:scaleType="fitXY"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="28dp"
            android:layout_y="0dp"
            android:gravity="top"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="1"
            android:singleLine="true"
            android:textColor="#010101"
            android:textSize="52dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_x="137dp"
            android:layout_y="7dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/highTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:textColor="#010101"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:textColor="#010101"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/curCondTextView"
            android:layout_width="167dp"
            android:layout_height="30dp"
            android:layout_x="10dp"
            android:layout_y="55dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/loading_msg"
            android:textColor="#010101"
            android:textSize="11dp" />

        <LinearLayout
            android:layout_width="169dp"
            android:layout_height="1.5dp"
            android:layout_x="10dp"
            android:layout_y="91dp"
            android:background="#FFFFFF" >
        </LinearLayout>

        <TextView
            android:id="@+id/dowTextView"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="95dp"
            android:textColor="#010101"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/dowTextViewShort"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="95dp"
            android:textColor="#010101"
            android:textSize="17dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_x="125dp"
            android:layout_y="99dp"
            android:textColor="#010101"
            android:textSize="12dp" />

    </AbsoluteLayout>
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|center"
            android:background="@color/weatherbug_blue"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button"
                android:layout_width="82dp"
                android:layout_height="17dp"
                android:background="#e6e7e8"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:text="@string/configure_btn"
                android:textColor="#58595b"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="103dp"
                android:layout_height="17dp"
                android:layout_gravity="right|center"
                android:background="#a7a9ac"
                android:gravity="right|center"
                android:paddingRight="7dp"
                android:textColor="#414042"
                android:textSize="9dp" />
        </LinearLayout>

</RelativeLayout>